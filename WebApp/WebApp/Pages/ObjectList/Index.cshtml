@page
@model WebApp.Pages.ObjectList.IndexModel
@{
	ViewData["Title"] = "Index";
}

<br />

<div class = "container row p-0 m-0">
	
	<div class = "col-8">
	
		<h2 class="text-warning">Items List</h2>
	
	</div>
	
	<div class = "col-4">
	
		<a a asp-page ="Add" class = "btn btn-info form-control">Add a new item</a>	
	
	</div>

	<div class = "col-12 border p-3 mt-3">
		<form method="post">
			@if (Model.Items.Count() > 0)
			{
				<table class = "table table-striped border">
					<tr class = "table-secondary">
						<th>	
							<label asp-for="Items.FirstOrDefault().Name"></label>
						</th>
						<th>
							@*@Html.DisplayNameFor(m=>m.Items.FirstOrDefault().Dealer)*@
							<label asp-for="Items.FirstOrDefault().Dealer"></label>
						</th>
						<th>
							<label asp-for="Items.FirstOrDefault().ISO"></label>
						</th>
						<th>

						</th>
					</tr>
					@foreach(var item in Model.Items)
					{
						<tr>
							<td>
								@Html.DisplayFor(m=>item.Name)									
							</td>
							<td>
								@Html.DisplayFor(m=>item.Dealer)									
							</td>
							<td>
								@Html.DisplayFor(m=>item.ISO)									
							</td>
							<td>
								<a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success px-5">Edit</a> 
								<button asp-page-handler = "Delete" asp-route-id = "@item.Id" onclick="return confirm('Are you sure you want to delete the item?')" class="btn btn-danger btn-sm px-5">
									Delete
									</button>
							</td>
						</tr>
					}
				</table>
			}
			else{
				<p>No books available...</p>
			}
		</form>
	</div>

	
    <div class="col-12" style="text-align:center">
        <br />
        <span class="h3 text-info">OR</span>
        <br /><br />
    </div>
    <div class="col-12 border p-3">

        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th> Dealer</th>
                    <th> ISO</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
	<script src="~/js/itemList.js"></script>
}
